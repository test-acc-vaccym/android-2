<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        android:showDividers="end"
        android:divider="@drawable/bottom_line">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@mipmap/ic_launcher"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorTitle"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="崇德興仁  教學為先"
                android:textColor="@color/colorTitle" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner48"
        android:background="@drawable/side_nav_bar"
        android:divider="@drawable/bottom_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_program" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jmlb"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorTitle" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_programs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner48"
        android:background="@drawable/side_nav_bar"
        android:divider="@drawable/bottom_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_news" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zxxx"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorTitle" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <include layout="@layout/contact"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"></LinearLayout>

</LinearLayout>
