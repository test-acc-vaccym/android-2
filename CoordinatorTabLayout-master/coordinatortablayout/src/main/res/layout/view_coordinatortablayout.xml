<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <android.support.design.widget.NavigationView
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="@color/Snow"
        android:maxWidth="@dimen/drawer_nav_width"
        app:itemTextAppearance="@style/NavigationDrawerStyle"
        app:theme="@style/ItemHeight">
        <!--设置参数-->
        <!--android:fitsSystemWindows="true"-->
        <!--style="@style/RightNavMenuStyle"-->
        <!--
        https://stackoverflow.com/questions/30626324/navigationview-and-custom-layout
        下面这段替换
        app:headerLayout="@layout/right_nav_header"
        app:menu="@menu/right_nav_drawer"
         -->
        <LinearLayout
            android:id="@+id/right_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--等同于 app:headerLayout="@layout/right_nav_header"-->
            <include layout="@layout/right_nav_header" />

            <!-- 等同于  app:menu="@menu/right_nav_drawer"
            But don't forget to remove app:menu from NavigationView
            -->
            <ListView
                android:id="@+id/right_nav_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </android.support.design.widget.NavigationView>

    <include
        layout="@layout/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.v4.widget.DrawerLayout>

