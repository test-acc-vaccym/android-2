<resources>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearence</item>
        <item name="tabIndicatorColor">@android:color/holo_blue_dark</item>
        <item name="tabTextColor">@color/green</item>
        <item name="tabSelectedTextColor">@android:color/holo_blue_dark</item>
        <item name="tabBackground">@color/bottom_tab_nav_background</item>
        <item name="tabIndicatorHeight">1dp</item>
        <!--item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item-->
    </style>

    <!--右侧导航 menu items 间隔设置-->
    <style name="ItemHeight">
        <!--设置宽度-->
        <!--item name="android:maxWidth">@dimen/drawer_nav_width</item-->
        <!-- 高版本 item 间距 -->
        <item name="android:listPreferredItemHeightSmall">@dimen/drawer_item_height</item>
        <item name="listPreferredItemHeightSmall">@dimen/drawer_item_height</item>
        <!--item name="app:itemTextColor">@color/black_overlay</item>
        <item name="app:itemIconTint">@color/colorPrimary</item>
        <item name="app:itemBackground">@color/colorPrimary</item-->
    </style>

    <style name="TabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 添加这一句， 即可改变toolbar menu 图标的颜色-->
        <item name="android:textColorSecondary">#afffffff</item>
        <!--toolbar标题文字颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="search_view">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/selector_search_view</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 对话框 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/android:transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
