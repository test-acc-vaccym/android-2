<resources>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearence</item>
        <item name="tabIndicatorColor">@android:color/holo_blue_dark</item>
        <item name="tabTextColor">@color/green</item>
        <item name="tabSelectedTextColor">@android:color/holo_blue_dark</item>
        <item name="tabBackground">@color/bottom_tab_nav_background</item>
        <item name="tabIndicatorHeight">1dp</item>
        <!--item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item-->
    </style>

    <style name="TabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
