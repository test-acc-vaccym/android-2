<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape  xmlns:android="http://schemas.android.com/apk/res/android">
            <solid
                android:color="@color/mb_green_dark" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape >
    </item>
    <!-- 按下状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/guide_item_background_start"
                android:centerColor="@color/guide_item_background_center"
                android:endColor="@color/guide_item_background_end"
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.5"
                android:angle="90"/>
            <corners android:radius="2dp" />
        </shape >
    </item>
</selector>