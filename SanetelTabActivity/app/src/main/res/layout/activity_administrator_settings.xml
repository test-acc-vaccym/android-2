<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.administrator.AdministratorSettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/administrator_settings_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/administrator_settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/state_bar_background"
            app:titleTextColor="@color/black"
            app:titleTextAppearance="?android:attr/textAppearanceLarge"
            app:navigationIcon="@drawable/back">
            <!--app:layout_scrollFlags="scroll|enterAlways"-->
        </android.support.v7.widget.Toolbar>

        <!--include android:id="@+id/administrator_settings_operate_bar"
            layout="@layout/operate_bar_top"/-->
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_divider"
            android:background="@color/gray"/>
    </android.support.design.widget.AppBarLayout>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomViewPager
        android:id="@+id/administrator_settings_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/status_bar_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomFAB
        android:id="@+id/administrator_settings_fab"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:src="@mipmap/help"
        app:backgroundTint="@color/button_blink"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_anchor="@id/administrator_settings_viewpager"
        android:layout_gravity="bottom"
        app:layout_anchorGravity="top|end"
        app:pressedTranslationZ="12dp"
        app:rippleColor="#a6a6a6" />

</android.support.design.widget.CoordinatorLayout>
