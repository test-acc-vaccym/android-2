<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.settings.AntennaRestartActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/antenna_restart_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/antenna_restart_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/state_bar_background"
            app:titleTextColor="@color/black"
            app:titleTextAppearance="?android:attr/textAppearanceLarge"
            app:navigationIcon="@drawable/back">
            <!--app:layout_scrollFlags="scroll|enterAlways"-->
        </android.support.v7.widget.Toolbar>

        <include android:id="@+id/antenna_restart_operate_bar"
            layout="@layout/operate_bar_top"/>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_divider"
            android:background="@color/gray"/>
    </android.support.design.widget.AppBarLayout>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/main_settings_antenna_restart"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/settings_antenna_restart_message"
        android:paddingBottom="@dimen/main_margin_top"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_divider"
        android:background="@color/black"/>
    <!--提示信息-->
    <include layout="@layout/pop_dialog_blue"
        android:id="@+id/main_settings_antenna_restart_pop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>
</LinearLayout>
