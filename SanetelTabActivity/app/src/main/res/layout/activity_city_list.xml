<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.settings.CityLocationListActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/city_list_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/city_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/back"
            android:background="@color/state_bar_background"
            app:titleTextColor="@color/black"
            app:titleTextAppearance="?android:attr/textAppearanceLarge"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:id="@+id/title_city_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_city_list"
                android:textColor="@color/title_text"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/no_padding"
            android:paddingRight="@dimen/no_padding"
            android:background="@color/satellite_list_header_background">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/city_detail_name_key"
                android:textSize="@dimen/list_item_title_size"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                style="?android:attr/textAppearanceLarge"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textSize="@dimen/list_item_title_size"
                android:text="@string/city_detail_latitude_key"
                style="?android:attr/textAppearanceLarge" />
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:id="@+id/longitude_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/city_detail_longitude_key"
                android:textSize="@dimen/list_item_title_size"
                style="?android:attr/textAppearanceLarge"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:background="@drawable/button_background"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:text="@string/select_all"
                android:id="@+id/city_select_button"/>
            </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/city_list_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/no_padding"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:layout_marginBottom="@dimen/satellite_bottom_bar_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <include layout="@layout/city_list" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/satellite_bottom_bar_height"
        android:background="@color/bottom_tab_nav_background"
        android:layout_gravity="bottom">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/recover_city"
            android:drawableTop="@drawable/recover"
            android:text="@string/satellite_recover"
            android:background="@drawable/button_background"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/add_city"
            android:drawableTop="@drawable/ic_dialer_fork_add_call"
            android:text="@string/add_city"
            android:background="@drawable/button_background"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/delete_city"
            android:drawableTop="@drawable/ic_remove"
            android:text="@string/delete_city"
            android:background="@drawable/button_background"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/city_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin_bottom"
        app:srcCompat="@mipmap/help"
        android:background="@color/button_blink"
        android:visibility="gone"/>


</android.support.design.widget.CoordinatorLayout>
