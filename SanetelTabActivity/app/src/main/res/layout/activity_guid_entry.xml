<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edroplet.sanetel.activities.guide.GuideEntryActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/guide_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:navigationIcon="@drawable/ic_navigate_before_white"
        app:title="@null"
        android:background="@color/toolbar_background"
        app:titleTextColor="@color/toolbar_text_color"
        app:titleTextAppearance="?android:attr/textAppearanceLarge"
        android:fitsSystemWindows="true">
        <com.edroplet.sanetel.view.custom.CustomTextView
            android:id="@+id/guide_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:text="@string/follow_me_bottom_nav_main"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSearchResultTitle"
            tools:ignore="RtlHardcoded" />
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/guide_enter_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guide_main_enter"
            android:textStyle="bold"
            android:textColor="@color/button_text"
            android:drawableEnd="@drawable/ic_navigate_next_white"
            android:drawableRight="@drawable/ic_navigate_next_white"
            android:background="@drawable/button_background"
            android:layout_gravity="end"
            android:textAppearance="?attr/textAppearanceSearchResultTitle"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/linear_shadow">
            <!--android:layout_marginTop="@dimen/guide_list_padding_left"-->
            <LinearLayout
                android:id="@+id/guide_main_button_explode"
                style="@style/guide_entry_list_style">
                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_flow_style"/>
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:drawableLeft="@drawable/guide_satellite_vista"
                    android:drawableStart="@drawable/guide_satellite_vista"
                    android:clickable="false"
                    android:text="@string/guide_main__exploded"
                    style="@style/guide_item_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/guide_main_button_location"
                style="@style/guide_entry_list_style">
                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_flow_style"/>
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:drawableLeft="@drawable/guide_input"
                    android:drawableStart="@drawable/guide_input"
                    android:text="@string/guide_main_location"
                    style="@style/guide_item_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/guide_main_button_destination"
                style="@style/guide_entry_list_style">
                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_flow_style"/>
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:drawableLeft="@drawable/guide_satellites"
                    android:drawableStart="@drawable/guide_satellites"
                    android:text="@string/guide_main_destination_satellite"
                    style="@style/guide_item_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/guide_main_button_search_mode"
                style="@style/guide_entry_list_style">
                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_flow_style"/>
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:drawableLeft="@drawable/guide_searching_mode"
                    android:drawableStart="@drawable/guide_searching_mode"
                    android:text="@string/guide_main_searching_mode"
                    style="@style/guide_item_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/guide_main_button_search"
                style="@style/guide_entry_list_style">
                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_flow_style"/>

                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_style"
                    android:drawableLeft="@drawable/guide_searching"
                    android:drawableStart="@drawable/guide_searching"
                    android:text="@string/guide_main_searching"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/guide_main_button_lock"
                style="@style/guide_entry_list_style">
                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_flow_style"/>
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:drawableLeft="@drawable/guide_locked"
                    android:drawableStart="@drawable/guide_locked"
                    android:text="@string/guide_main_lock"
                    style="@style/guide_item_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/guide_main_button_saving"
                style="@style/guide_entry_list_style">
                <com.edroplet.sanetel.view.custom.CustomButton
                    style="@style/guide_item_flow_style"/>
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:drawableLeft="@drawable/guide_saving"
                    android:drawableStart="@drawable/guide_saving"
                    android:text="@string/guide_main_save"
                    style="@style/guide_item_style"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
