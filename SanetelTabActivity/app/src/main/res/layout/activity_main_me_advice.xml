<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.edroplet.sanetel.activities.main.MainActivity"
    style="@style/linear_no_shadow_no_padding">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_me_advice_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/main_me_advice_toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/black"
            app:titleTextAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/state_bar_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/back"
            app:title="@string/main_me_advice_title">
        </android.support.v7.widget.Toolbar>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_divider"
            android:background="@color/gray"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_me_advice_appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/guide_list_padding_left"
            android:layout_marginLeft="@dimen/guide_list_padding_left">
            <!--接收邮箱：support@sanetel.com-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.sanetel.view.custom.JustifyTextView
                    android:text="@string/main_me_error_report_email_receive"
                    style="@style/advice_horizontal_style"
                    android:layout_weight="0.5"
                    android:padding="@dimen/appbar_padding_top"
                    android:gravity="start|left"/>

                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_me_advice_email_receive"
                    style="@style/advice_horizontal_style"
                    android:text="@string/main_me_error_report_email_receive_address"
                    app:titleTextAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
            <!--发送邮箱-->
            <LinearLayout
                style="@style/layout_vertical_style"
                android:visibility="gone">
                <com.edroplet.sanetel.view.custom.JustifyTextView
                    android:text="@string/main_me_error_report_email_send"
                    style="@style/advice_horizontal_style"
                    android:layout_weight="0.5"
                    android:padding="@dimen/appbar_padding_top"
                    android:gravity="start|left"/>
                <com.edroplet.sanetel.view.custom.CustomEditText
                    style="@style/advice_horizontal_style"
                    app:titleTextAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/main_me_advice_email_send_address"
                    android:text="@string/main_me_advice_email_send_address"/>
            </LinearLayout>
            <!--用户邮箱-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.sanetel.view.custom.JustifyTextView
                    android:text="@string/main_me_error_report_user_mail"
                    style="@style/advice_horizontal_style"
                    android:layout_weight="0.5"
                    android:padding="@dimen/appbar_padding_top"
                    android:gravity="start|left"/>

                <com.edroplet.sanetel.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_user_mail"
                    style="@style/advice_horizontal_style"
                    app:titleTextAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
            <!--用户单位-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.sanetel.view.custom.JustifyTextView
                    android:text="@string/main_me_email_customer"
                    style="@style/advice_horizontal_style"
                    android:layout_weight="0.5"
                    android:padding="@dimen/appbar_padding_top"
                    android:gravity="start|left"/>
                <com.edroplet.sanetel.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_email_customer"
                    style="@style/advice_horizontal_style"/>
            </LinearLayout>
            <!--姓    名-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.sanetel.view.custom.JustifyTextView
                    android:text="@string/main_me_advice_name"
                    style="@style/advice_horizontal_style"
                    android:layout_weight="0.5"
                    android:padding="@dimen/appbar_padding_top"
                    android:gravity="start|left"/>
                <com.edroplet.sanetel.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_name"
                    style="@style/advice_horizontal_style"
                    android:maxLength="5"
                    app:titleTextAppearance="?android:attr/textAppearanceMedium"/>
            </LinearLayout>
            <!--电    话-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.sanetel.view.custom.JustifyTextView
                    android:text="@string/main_me_advice_phone"
                    style="@style/advice_horizontal_style"
                    android:layout_weight="0.5"
                    android:padding="@dimen/appbar_padding_top"
                    android:gravity="start|left"/>
                <com.edroplet.sanetel.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_phone"
                    style="@style/advice_horizontal_style"
                    android:inputType="number"
                    android:maxLength="12"
                    app:titleTextAppearance="?android:attr/textAppearanceMedium"/>
            </LinearLayout>
            <!--文件名称-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.sanetel.view.custom.JustifyTextView
                    android:text="@string/main_me_advice_subject"
                    style="@style/advice_horizontal_style"
                    android:layout_weight="0.5"
                    android:padding="@dimen/appbar_padding_top"
                    android:inputType="textEmailSubject"
                    android:gravity="start|left"/>
                <com.edroplet.sanetel.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_subject"
                    style="@style/advice_horizontal_style"
                    app:titleTextAppearance="?android:attr/textAppearanceMedium"/>
            </LinearLayout>
            <!--添加附件-->
            <LinearLayout
                style="@style/layout_vertical_style"
                android:layout_weight="3"
                android:layout_gravity="start|left"
                android:gravity="start|left"
                android:paddingLeft="@dimen/no_padding"
                android:orientation="vertical">
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:id="@+id/main_me_advice_attach"
                    android:text="@string/main_me_error_report_attach"
                    style="@style/button_vertical_style"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="start|left|center_vertical"
                    android:gravity="start|left|center_vertical"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_me_advice_attach_files"
                    style="@style/text_vertical_style"
                    android:layout_weight="2"
                    app:titleTextAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="start|left|center_vertical"
                    android:lines="2"
                    android:inputType="textMultiLine"
                    android:lineSpacingMultiplier="@dimen/line_spacing_multiplier"/>
            </LinearLayout>
            <!--添加照片-->
            <LinearLayout
                style="@style/layout_vertical_style"
                android:layout_weight="3"
                android:layout_gravity="start|left"
                android:gravity="start|left"
                android:padding="@dimen/no_padding"
                android:orientation="vertical">
                <com.edroplet.sanetel.view.custom.CustomButton
                    android:id="@+id/main_me_advice_photo"
                    android:text="@string/main_me_advice_photo"
                    style="@style/button_vertical_style"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="start|left|center_vertical"
                    android:gravity="start|left|center_vertical"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_me_advice_photo_list"
                    style="@style/text_vertical_style"
                    android:layout_weight="2"
                    app:titleTextAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="start|left|center_vertical"
                    android:lines="2"
                    android:inputType="textMultiLine"
                    android:lineSpacingMultiplier="@dimen/line_spacing_multiplier"/>
        </LinearLayout>
            <!--故障描述-->
            <com.edroplet.sanetel.view.custom.CustomEditText
                android:id="@+id/main_me_advice_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/main_me_advice_description"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingStart="@dimen/layout_padding_left"
                android:paddingLeft="@dimen/layout_padding_left"
                android:lines="5"
                android:gravity="start|left"
                android:inputType="textMultiLine"
                android:layout_weight="5"
                android:lineSpacingMultiplier="@dimen/line_spacing_multiplier"/>

            <com.edroplet.sanetel.view.custom.CustomTextView
                android:id="@+id/submit_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mb_red"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <!--底部栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_alignParentBottom="true">
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/main_me_advice_commit"
            style="@style/button_horizontal_style"
            android:text="@string/main_me_advice_commit"/>
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/main_me_advice_save"
            style="@style/button_horizontal_style"
            android:text="@string/main_me_advice_save"/>
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/main_me_advice_return"
            style="@style/button_horizontal_style"
            android:text="@string/main_me_advice_return"/>
    </LinearLayout>
</RelativeLayout>
