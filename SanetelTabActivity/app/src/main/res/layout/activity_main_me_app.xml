<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    style="@style/linear_no_shadow_no_padding">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/main_me_app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/toolbar_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/back"
            app:titleTextColor="@color/toolbar_text_color"
            app:titleTextAppearance="?android:attr/textAppearanceLarge"
            app:title="@string/main_me_app_title">
        </android.support.v7.widget.Toolbar>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_divider"
            android:background="@color/gray"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_marginTop="@dimen/app_bar_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/app_bar_height">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_me_app_version"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_bar_height"
                    android:gravity="center"
                    android:text="@string/main_me_app_version"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingStart="@dimen/guide_list_padding_left"
                android:paddingLeft="@dimen/guide_list_padding_left"
                android:orientation="horizontal">

                <com.edroplet.sanetel.view.custom.CustomButton
                    android:id="@+id/main_me_app_update"
                    style="@style/button_horizontal_style"
                    android:gravity="start|left|center_vertical"
                    android:padding="@dimen/no_padding"
                    android:text="@string/main_me_app_update" />

                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_me_app_update_state"
                    style="@style/text_horizontal_style"
                    android:padding="@dimen/no_padding"
                    android:textColor="@color/green_70"
                    android:text="@string/main_me_app_update_state_checking"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:textSize="@dimen/app_update_status_text_size"
                    android:gravity="start|left|center_vertical"
                    android:visibility="gone"/>
            </LinearLayout>
            <com.edroplet.sanetel.view.custom.CustomButton
                android:id="@+id/main_me_app_recovery"
                style="@style/button_vertical_style"
                android:layout_width="match_parent"
                android:padding="@dimen/no_padding"
                android:text="@string/main_me_app_recovery"
                android:gravity="start|left|center_vertical"/>
            <com.edroplet.sanetel.view.custom.CustomButton
                android:id="@+id/main_me_app_download"
                style="@style/button_vertical_style"
                android:padding="@dimen/no_padding"
                android:layout_width="match_parent"
                android:text="@string/main_me_app_download"
                android:gravity="start|left|center_vertical"/>
            <com.edroplet.sanetel.view.custom.CustomButton
                android:id="@+id/main_me_app_browse"
                style="@style/button_vertical_style"
                android:layout_width="match_parent"
                android:padding="@dimen/no_padding"
                android:text="@string/main_me_app_browse"
                android:gravity="start|left|center_vertical"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
