<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.settings.NewCityActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right|end"
            android:layout_height="match_parent"
            android:padding="@dimen/list_detail_padding"
            android:text="@string/satellite_detail_id_key"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
            style="?android:attr/textAppearanceMedium"
            android:id="@+id/id_city_new"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="right|end"
                android:layout_height="match_parent"
                android:padding="@dimen/list_detail_padding"
                android:text="@string/city_detail_province"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                style="?android:attr/textAppearanceMedium"
                android:id="@+id/city_new_provence"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="right|end"
                android:layout_height="match_parent"
                android:padding="@dimen/list_detail_padding"
                android:text="@string/city_detail_name_key"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                style="?android:attr/textAppearanceMedium"
                android:id="@+id/city_new_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|end"
                android:layout_weight="1"
                android:padding="@dimen/list_detail_padding"
                android:text="@string/city_detail_latitude_key" />

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                android:id="@+id/city_new_latitude"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number|numberDecimal"
                android:layout_weight="2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="right|end"
                android:layout_height="match_parent"
                android:padding="@dimen/list_detail_padding"
                android:text="@string/city_detail_longitude_key"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                style="?android:attr/textAppearanceMedium"
                android:id="@+id/city_new_longitude"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="number|numberDecimal"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:id="@+id/city_new_button_commit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/button_blink"
            android:textColor="@color/button_text"
            android:gravity="center"
            android:text="@string/main_me_error_report_commit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:id="@+id/city_new_button_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/button_blink"
            android:textColor="@color/button_text"
            android:gravity="center"
            android:text="@string/operate_confirm_cancel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>
</LinearLayout>
