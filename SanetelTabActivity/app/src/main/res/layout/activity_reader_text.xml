<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/linear_no_shadow"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.functions.ReaderTextActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/read_text_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/back"
        android:background="@color/state_bar_background"
        app:titleTextColor="@color/black"
        app:titleTextAppearance="?android:attr/textAppearanceLarge"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </android.support.v7.widget.Toolbar>

    <com.edroplet.qxx.saneteltabactivity.view.BorderScrollView
        android:id="@+id/read_text_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            android:id="@+id/read_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.edroplet.qxx.saneteltabactivity.view.BorderScrollView>
</LinearLayout>
