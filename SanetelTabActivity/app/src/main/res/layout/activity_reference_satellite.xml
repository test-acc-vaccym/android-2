<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/linear_no_shadow_no_padding"
    tools:context="com.edroplet.sanetel.activities.settings.ReferenceSatelliteActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/setting_reference_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height">
        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_reference_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            app:title="@string/settings_reference_title"
            android:background="@color/toolbar_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/back"
            app:titleTextColor="@color/toolbar_text_color"
            app:titleTextAppearance="?android:attr/textAppearanceMedium"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--数值-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/layout_padding_left"
            android:paddingLeft="@dimen/layout_padding_left"
            android:orientation="vertical">

            <!--卫星经度 信标频率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--卫星经度-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_reference_latitude"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:id="@+id/settings_reference_longitude"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/text_11"
                        android:layout_height="wrap_content"
                        android:hint="@string/main_monitor_satellite_longitude_hint"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_11"
                        android:text="@string/latitude_degree_unit_east"/>
                </LinearLayout>
                <!--信标频率-->
                <!--LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_reference_beacon"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:id="@+id/settings_reference_beacon"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:hint="@string/main_monitor_satellite_beacon_hint"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/frequency_unit"/>
                </LinearLayout-->
            </LinearLayout>

            <!--AG门 限 DVB符号率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--AG门 限-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_reference_ag"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:id="@+id/settings_reference_ag"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_11"
                        android:hint="@string/main_monitor_satellite_agc_hint"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:textColor="@color/text_11"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--DVB符号率-->
                <!--LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_reference_dvb"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:id="@+id/settings_reference_dvb"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:hint="@string/main_monitor_satellite_agc_hint"/>
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/voltage_unit"/>
                </LinearLayout-->
            </LinearLayout>
            <!--信标频率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_beacon"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/settings_reference_beacon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_11"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_monitor_satellite_beacon_hint"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:text="@string/frequency_unit"/>
            </LinearLayout>
            <!--载波频率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_carrier"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/settings_reference_carrier"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:hint="@string/main_monitor_satellite_carrier_hint"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:text="@string/settings_reference_carrier_unit"/>
            </LinearLayout>
            <!--DVB符号率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_dvb"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/settings_reference_dvb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:hint="@string/settings_reference_dvb_hint"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:text="@string/voltage_unit"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_padding_top">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg">
            <com.edroplet.sanetel.view.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_reference_mode"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!--单选框-->
            <RadioGroup
                android:id="@+id/reference_satellite_select_radio_group"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/reference_satellite_select_mode_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_mode_direct"/>
                <RadioButton
                    android:id="@+id/reference_satellite_select_mode_reference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_mode_reference" />
            </RadioGroup>
            <!--卫星名-->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/reference_satellite_select_spinner"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/reference_satellite_select_satellites"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    style="?android:attr/spinnerStyle"
                    android:entries="@array/satellites"/>
                <Spinner
                    android:id="@+id/reference_satellite_select_satellites_polarization"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:entries="@array/satellites_polarization"/>
            </LinearLayout>

            <!--提示信息-->
            <include layout="@layout/pop_dialog_blue"
                android:layout_gravity = "center"
                android:id="@+id/settings_reference_satellite_pop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
