<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.settings.ReferenceSatelliteActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/setting_reference_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height">
        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_reference_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            app:title="@string/settings_reference_title"
            android:background="@color/state_bar_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/back"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_reference_mode"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <!--单选-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <!--单选框-->
            <RadioGroup
                android:id="@+id/reference_satellite_select_radio_group"
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium">
                <RadioButton
                    android:id="@+id/reference_satellite_select_mode_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/settings_reference_mode_direct"/>
                <RadioButton
                    android:id="@+id/reference_satellite_select_mode_refernce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_mode_reference" />
            </RadioGroup>
            <!--卫星名-->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/reference_satellite_select_spinner"
                android:paddingLeft="@dimen/radio_group_city_padding"
                android:paddingStart="@dimen/radio_group_city_padding"
                android:paddingEnd="@dimen/radio_group_city_padding"
                android:paddingRight="@dimen/radio_group_city_padding"
                android:layout_marginStart="@dimen/radio_group_width"
                android:layout_marginLeft="@dimen/radio_group_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <Spinner
                    android:id="@+id/reference_satellite_select_satellites"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:entries="@array/satellites"/>
                <Spinner
                    android:id="@+id/reference_satellite_select_satellites_polarization"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:entries="@array/satellites_polarization"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!--数值-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <!--卫星经度 信标频率-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--卫星经度-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_latitude"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:id="@+id/settings_reference_latitude"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right|end"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_monitor_satellite_longitude_hint"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude_degree_unit"/>
            </LinearLayout>
            <!--信标频率-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_beacon"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:id="@+id/settings_reference_beacon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right|end"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_monitor_satellite_beacon_hint"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/frequency_unit"/>
            </LinearLayout>
        </LinearLayout>
        <!--AG门 限 DVB符号率-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--AG门 限-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_ag"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:id="@+id/settings_reference_ag"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right|end"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_monitor_satellite_polarization_hint"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--DVB符号率-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reference_dvb"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:id="@+id/settings_reference_dvb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right|end"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_monitor_satellite_agc_hint"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/voltage_unit"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--提示信息-->
    <include layout="@layout/pop_dialog_blue"
        android:id="@+id/settings_reference_satellite_pop"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

</LinearLayout>
