<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.guide.WifiManagerActivity">
    <LinearLayout
        android:layout_width="455dp"
        android:layout_height="48dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:id="@+id/check_wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="检查状态"
            tools:ignore="HardcodedText"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:id="@+id/open_wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="打开WIFI"
            tools:ignore="HardcodedText"/>

        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:id="@+id/close_wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关闭WIFI"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="HardcodedText" />
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
            android:id="@+id/scan_wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="扫描网络"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <ListView
        android:id="@+id/wifi_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
