<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/entire_page"
    android:id="@+id/monitor_beacon_satellite_info"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/layout_padding_top">
    <!--卫星信息-->
    <com.edroplet.sanetel.view.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_monitor_satellite_info"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/sub_layout_padding_top">
        <!--名称极化-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_monitor_satellite_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_monitor_beacon_satellite_tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:hint="@string/main_monitor_satellite_name_hint"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_monitor_satellite_polarization"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_monitor_beacon_satellite_tv_polarization"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_monitor_satellite_polarization_hint"
                    android:textColor="@color/text_11"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--经度AGC-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_monitor_satellite_longitude"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_monitor_beacon_satellite_tv_longitude"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:hint="@string/main_monitor_satellite_longitude_hint"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:text="@string/latitude_degree_unit_east"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/main_monitor_satellite_agc"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_monitor_beacon_satellite_tv_agc"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:hint="@string/main_monitor_satellite_agc_hint"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textColor="@color/text_11"
                    android:layout_height="wrap_content"
                    android:text="@string/voltage_unit"/>
            </LinearLayout>
        </LinearLayout>
        <!--信标-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_monitor_satellite_beacon"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:id="@+id/main_monitor_beacon_satellite_tv_beacon"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="@dimen/drawable_center_spacing"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:hint="@string/main_monitor_satellite_beacon_hint"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_11"
                    android:text="@string/frequency_unit"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>