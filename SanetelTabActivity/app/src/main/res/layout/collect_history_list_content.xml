<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            android:id="@+id/collect_history_list_file_name"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textSize="@dimen/list_item_text_size"
            android:textAppearance="?attr/textAppearanceListItem" />
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            android:id="@+id/collect_history_list_save_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textSize="@dimen/list_item_text_size"
            android:textAppearance="?attr/textAppearanceListItem" />
        <!--CheckBox
            android:id="@+id/collect_history_list_check"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/-->
    </LinearLayout>
    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <!--Button
        android:id="@+id/btnTop"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#d9dee4"
        android:text="置顶"
        android:textColor="@android:color/white"/-->
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_collect_data_history_list_open"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#ecd50a"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/main_collect_data_history_list_open"
        android:textColor="@android:color/white"/>

    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_collect_data_history_list_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/mb_red_dark"
        android:text="@string/main_collect_data_history_list_delete"
        android:textColor="@android:color/white"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_collect_data_history_list_delete_all"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/mb_red_dark"
        android:text="@string/main_collect_data_history_list_delete_all"
        android:textColor="@android:color/white"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>