<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.edroplet.sanetel.view.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/administrator_antenna_type"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.edroplet.sanetel.view.custom.CustomRadioGroupWithCustomRadioButton
                    android:id="@+id/id_administrator_settings_antenna_type_radio_group"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/layout_padding_left"
                    android:tooltipText="@string/administrator_antenna_type">

                    <!--android:focusable="false"-->
                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/administrator_setting_antenna_type_two_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="@string/administrator_setting_antenna_type_two_two"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/administrator_setting_antenna_type_two_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:layout_below="@id/administrator_setting_antenna_type_two_two"
                        android:text="@string/administrator_setting_antenna_type_two_one"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/administrator_setting_antenna_type_two_zero"
                        android:layout_below="@id/administrator_setting_antenna_type_two_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="@string/administrator_setting_antenna_type_two_zero"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/administrator_setting_antenna_type_three_one"
                        android:layout_below="@id/administrator_setting_antenna_type_two_zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="@string/administrator_setting_antenna_type_three_one"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/administrator_setting_antenna_type_three_zero"
                        android:layout_below="@id/administrator_setting_antenna_type_three_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="@string/administrator_setting_antenna_type_three_zero"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                </com.edroplet.sanetel.view.custom.CustomRadioGroupWithCustomRadioButton>
            </LinearLayout>
            <include layout="@layout/pop_dialog_blue"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
