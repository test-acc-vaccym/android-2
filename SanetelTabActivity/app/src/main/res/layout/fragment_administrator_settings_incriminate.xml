<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/manual_divider">

    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/administrator_antenna_incriminate"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_padding_left"
        android:layout_marginStart="@dimen/layout_padding_left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main_application_manual_speed_azimuth"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="NestedWeights" />

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                android:id="@+id/administrator_antenna_incriminate_tv_azimuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/main_application_manual_speed_azimuth"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.2"
                android:text="@string/angle_degree_unit"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main_application_manual_speed_pitch"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="NestedWeights" />

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                android:id="@+id/administrator_antenna_incriminate_tv_pitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/main_application_manual_speed_pitch"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.2"
                android:text="@string/angle_degree_unit"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main_application_manual_speed_polarization"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                android:id="@+id/administrator_antenna_incriminate_polarization"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/main_application_manual_speed_polarization"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.2"
                android:text="@string/angle_degree_unit"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/pop_dialog_blue"
        android:id="@+id/administrator_antenna_incriminate_pop"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/app_bar_height"/>
</LinearLayout>