<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">
    <!--寻星模式-->
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/follow_me_search_mode_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    <!--寻星模式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/layout_padding_top"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--寻星模式-->
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/follow_me_search_mode_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <!--单选框-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--单选组-->
            <RadioGroup
                android:id="@+id/rbg_city"
                android:padding="@dimen/no_padding"
                android:layout_width="@dimen/radio_group_width"
                android:layout_height="wrap_content">

                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_me_search_mode_beacon" />

                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_me_search_mode_dvb"/>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/pop_dialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
</ScrollView>