<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/functions_fragment_margin_bottom"
    android:background="@drawable/guide_main_item_background_color">
    <!--com.edroplet.sanetel.view.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_bottom_nav_control"/-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/main_control_image_max_height"
        android:src="@drawable/main_control_image"/>
    <!--com.edroplet.sanetel.view.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/main_control_operate" /-->
    <LinearLayout
        android:layout_marginTop="@dimen/status_button_height"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/main_control_manual_step"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/step"
            android:text="@string/main_control_operate_step"
            android:clickable="true"
            android:background="@drawable/button_background"/>
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/main_control_speed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/speed_manual"
            android:text="@string/main_control_operate_speed"
            android:clickable="true"
            android:background="@drawable/button_background"/>
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/main_control_manual_location"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/location_manual"
            android:text="@string/main_control_operate_location"
            android:clickable="true"
            android:background="@drawable/button_background"/>
        <com.edroplet.sanetel.view.custom.CustomButton
            android:id="@+id/main_control_manual_calculate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/calculate_manual"
            android:text="@string/main_control_operate_calculate"
            android:clickable="true"
            android:background="@drawable/button_background"/>
    </LinearLayout>
</LinearLayout>