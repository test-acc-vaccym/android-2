<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/manual_divider">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_application_operate_location"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/current_location_values"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--速度控制-->
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/location_control_current_info"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/location_control_current_azimuth"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    tools:ignore="NestedWeights" />
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                    android:id="@+id/main_application_manual_location_tv_azimuth"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberSigned|numberDecimal"
                                    android:hint="@string/location_control_setting_hint_val"/>
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:text="@string/angle_degree_unit"
                                android:layout_gravity="start"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/location_control_current_pitch"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    tools:ignore="NestedWeights" />
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                    android:id="@+id/main_application_manual_location_tv_pitch"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberSigned|numberDecimal"
                                    android:hint="@string/location_control_setting_hint_val"/>
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:text="@string/angle_degree_unit"
                                android:layout_gravity="start"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/location_control_current_polarization"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    tools:ignore="NestedWeights" />
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                    android:id="@+id/main_application_manual_location_tv_polarization"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/location_control_setting_hint_val"/>
                                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:text="@string/angle_degree_unit"
                                android:layout_gravity="start"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/prepare_location_values"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/layout_padding_top">
                    <!--预置角度-->
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/location_control_setting_info"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/location_control_setting_azimuth"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:ignore="NestedWeights" />
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                                android:id="@+id/main_application_manual_location_edit_setting_azimuth"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="numberSigned|numberDecimal"
                                android:paddingTop="@dimen/no_padding"
                                android:hint="@string/location_control_setting_hint_val"/>
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:text="@string/angle_degree_unit"
                                android:layout_gravity="start"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/location_control_setting_pitch"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:ignore="NestedWeights" />
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                                android:id="@+id/main_application_manual_location_edit_setting_pitch"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="numberSigned|numberDecimal"
                                android:paddingTop="@dimen/no_padding"
                                android:hint="@string/location_control_setting_hint_val"/>
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:text="@string/angle_degree_unit"
                                android:layout_gravity="start"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/location_control_setting_polarization"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:ignore="NestedWeights" />
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                                android:id="@+id/main_application_manual_location_edit_setting_polarization"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="numberSigned|numberDecimal"
                                android:paddingTop="@dimen/no_padding"
                                android:hint="@string/location_control_setting_hint_val"/>
                            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:text="@string/angle_degree_unit"
                                android:layout_gravity="start"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/layout_padding_top">

            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:id="@+id/location_control_rotate"
                style="@style/button_horizontal_style"
                android:layout_gravity="center"
                android:focusedByDefault="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:defaultFocusHighlightEnabled="true"
                android:text="@string/location_control_rotate_start" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>