<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/status_bar_height"
        android:gravity="center">
        <!--目标星-->
        <com.edroplet.sanetel.view.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:text="@string/follow_me_destination_satellite_title"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <FrameLayout android:layout_height="150dp"
            android:layout_width="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/destination_frameLayout_satellite">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:fitsSystemWindows="true"
                android:contentDescription="@string/detailed_incall_info_title"
                android:scaleType="centerCrop"
                android:src="@mipmap/satellite1"/>
            <Gallery android:layout_height="0dp"
                android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gallery01"
                android:spacing="5dp"/>
        </FrameLayout>
        <!--卫星选择-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/layout_padding_top"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--单选框-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--单选组-->
                <RadioGroup
                    android:id="@+id/guide_destination_group"
                    android:padding="@dimen/no_padding"
                    android:layout_width="@dimen/radio_group_width"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/follow_me_destination_satellite_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/angle_calculate_satellite_select"/>

                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/follow_me_destination_satellite_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginTop="@dimen/app_bar_height"
                        android:text="@string/follow_me_destination_satellite_new"/>
                </RadioGroup>
                <!--卫星选择-->
                <LinearLayout
                    android:id="@+id/satellite_select"
                    android:paddingLeft="@dimen/radio_group_city_padding"
                    android:paddingStart="@dimen/radio_group_city_padding"
                    android:layout_marginTop="@dimen/spinner_lower_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">

                    <Spinner
                        android:id="@+id/follow_me_destination_spinner_satellites_select"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:entries="@array/satellites" />

                    <Spinner
                        android:id="@+id/follow_me_destination_spinner_satellites_polarization_select"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:entries="@array/satellites_polarization" />
                </LinearLayout>
                <!--新卫星参数输入-->
                <LinearLayout
                    android:paddingStart="@dimen/radio_group_city_padding"
                    android:paddingLeft="@dimen/radio_group_city_padding"
                    android:layout_marginTop="@dimen/status_bar_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/satellite_select"
                    android:layout_alignStart="@id/satellite_select"
                    android:layout_below="@id/satellite_select"
                    android:layout_alignEnd="@id/satellite_select"
                    android:layout_alignRight="@id/satellite_select"
                    android:orientation="vertical">
                    <include layout="@layout/fragment_settings_satellite_detail" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/pop_dialog_blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>