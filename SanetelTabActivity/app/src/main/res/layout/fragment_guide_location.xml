<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/status_bar_height"
        android:gravity="center">
        <!--位置输入-->
        <com.edroplet.sanetel.view.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:text="@string/guide_main_location"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <FrameLayout android:layout_height="150dp"
            android:layout_width="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/destination_frameLayout_location">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:fitsSystemWindows="true"
                android:contentDescription="@string/detailed_incall_info_title"
                android:scaleType="centerCrop"
                android:src="@mipmap/satellite1"/>
            <Gallery android:layout_height="0dp"
                android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gallery01"
                android:spacing="5dp"/>
        </FrameLayout>
        <!--本地位置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/layout_padding_top"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--单选框-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--单选组-->
                <RadioGroup
                    android:id="@+id/city_select_group"
                    android:padding="@dimen/no_padding"
                    android:layout_width="@dimen/radio_group_width"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/follow_me_location_db_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/follow_me_location_db_city"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <com.edroplet.sanetel.view.custom.CustomRadioButton
                        android:id="@+id/follow_me_location_new_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/follow_me_location_new_city"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginTop="@dimen/app_bar_height"/>
                </RadioGroup>
                <!--城市选择-->
                <LinearLayout
                    android:id="@+id/city_select"
                    android:paddingLeft="@dimen/radio_group_city_padding"
                    android:paddingStart="@dimen/radio_group_city_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/spinner_lower_height">

                    <!--android:layout_toEndOf="@+id/city_select_group"-->
                    <!--android:layout_toRightOf="@+id/city_select_group"-->

                    <Spinner
                        android:id="@+id/follow_me_spinner_province"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/no_padding"
                        android:paddingBottom="@dimen/no_padding"
                        android:entries="@array/province"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <Spinner
                        android:id="@+id/follow_me_spinner_city"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:entries="@array/city"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </LinearLayout>
                <!--城市位置输入-->
                <include layout="@layout/fragment_settings_city_detail"
                    android:layout_marginTop="@dimen/select_input_layout_margin_top"
                    android:paddingLeft="@dimen/radio_group_city_padding"
                    android:paddingStart="@dimen/radio_group_city_padding"
                    android:paddingRight="@dimen/radio_group_city_padding"
                    android:paddingEnd="@dimen/radio_group_city_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/city_select"
                    android:layout_below="@id/city_select"
                    android:layout_alignEnd="@id/city_select"/>
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/pop_dialog_blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>