<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.functions.ManualActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_me_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/main_me_toolbar"
            android:layout_width="match_parent"
            app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/state_bar_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/back"
            app:titleTextColor="@color/title_text"
            android:title="@string/main_bottom_nav_me">
        </android.support.v7.widget.Toolbar>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_divider"
            android:background="@color/gray"/>
    </android.support.design.widget.AppBarLayout>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_bottom_nav_me_language"
        style="@style/button_vertical_style"
        android:layout_width="match_parent"
        android:text="@string/main_bottom_nav_me_language"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_bottom_nav_me_error_report"
        style="@style/button_vertical_style"
        android:layout_width="match_parent"
        android:text="@string/main_bottom_nav_me_error_report"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_bottom_nav_me_advices"
        style="@style/button_vertical_style"
        android:layout_width="match_parent"
        android:text="@string/main_bottom_nav_me_advices"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_bottom_nav_me_about"
        style="@style/button_vertical_style"
        android:layout_width="match_parent"
        android:text="@string/main_bottom_nav_me_about"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_bottom_nav_me_version"
        style="@style/button_vertical_style"
        android:layout_width="match_parent"
        android:text="@string/main_bottom_nav_me_version"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
        android:id="@+id/main_bottom_nav_me_switch_device"
        style="@style/button_vertical_style"
        android:layout_width="match_parent"
        android:text="@string/main_bottom_nav_me_switch_device"/>
</LinearLayout>
