<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/app_bar_height">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/main_settings_amplifier_oscillator"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <include layout="@layout/amplifier_info" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_amplifier_oscillator_value"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioGroupWithCustomRadioButton
                android:layout_width="@dimen/radio_group_width"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/settings_amplifier_oscillator_value_1"
                    android:text="@string/settings_amplifier_oscillator_value_1"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/settings_amplifier_oscillator_value_2"
                    android:text="@string/settings_amplifier_oscillator_value_2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_amplifier_oscillator_value_3"/>
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                        android:id="@+id/settings_amplifier_oscillator_custom_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/settings_amplifier_oscillator_value_3"
                        android:layout_toRightOf="@id/settings_amplifier_oscillator_value_3"/>
                </RelativeLayout>
            </com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioGroupWithCustomRadioButton>
        </LinearLayout>

        <include layout="@layout/pop_dialog_blue"
            android:id="@+id/amplifier_oscillator_pop"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/app_bar_height"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>