<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.settings.CityLocationDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        style="?android:attr/textAppearanceLarge"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="right|end"
        android:layout_height="match_parent"
        android:padding="@dimen/list_detail_padding"
        android:text="@string/satellite_detail_id_key"/>
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        style="?android:attr/textAppearanceMedium"
        android:id="@+id/id_city_detail"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right|end"
            android:layout_height="match_parent"
            android:padding="@dimen/list_detail_padding"
            android:text="@string/city_detail_name_key"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            style="?android:attr/textAppearanceMedium"
            android:id="@+id/city_name_detail"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right|end"
            android:layout_height="match_parent"
            android:padding="@dimen/list_detail_padding"
            android:text="@string/city_detail_latitude_key"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
            style="?android:attr/textAppearanceMedium"
            android:id="@+id/city_detail_latitude"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right|end"
            android:layout_height="match_parent"
            android:padding="@dimen/list_detail_padding"
            android:text="@string/city_detail_longitude_key"/>
        <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
            style="?android:attr/textAppearanceMedium"
            android:id="@+id/city_detail_longitude"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
