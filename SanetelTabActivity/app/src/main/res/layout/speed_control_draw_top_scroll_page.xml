<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--运动方式&角速度-->
            <LinearLayout
                android:id="@+id/top_movement"
                style="@style/layout_manual_value_select"
                android:layout_height="120dp">
                <!--角速度-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/main_margin_top"
                    android:orientation="vertical">
                    <com.edroplet.sanetel.view.custom.CustomTextView
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@string/main_control_speed_palstance"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <com.edroplet.sanetel.view.custom.CustomRadioGroupWithCustomRadioButton
                        android:id="@+id/top_angular_velocity_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/layout_padding_left">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <com.edroplet.sanetel.view.custom.CustomRadioButton
                                style="@style/CustomRadioButtonHorizontalStyle"
                                android:id="@+id/top_angular_velocity_1"
                                android:text="0.1"/>
                            <com.edroplet.sanetel.view.custom.CustomRadioButton
                                style="@style/CustomRadioButtonHorizontalStyle"
                                android:id="@+id/top_angular_velocity_2"
                                android:text="0.5"/>
                            <com.edroplet.sanetel.view.custom.CustomRadioButton
                                style="@style/CustomRadioButtonHorizontalStyle"
                                android:id="@+id/top_angular_velocity_3"
                                android:text="1.0"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/layout_padding_top">
                            <com.edroplet.sanetel.view.custom.CustomRadioButton
                                style="@style/CustomRadioButtonHorizontalStyle"
                                android:id="@+id/top_angular_velocity_4"
                                android:text="3.0"/>
                            <com.edroplet.sanetel.view.custom.CustomRadioButton
                                style="@style/CustomRadioButtonHorizontalStyle"
                                android:id="@+id/top_angular_velocity_5"
                                android:layout_toEndOf="@id/top_angular_velocity_4"
                                android:text="5.0"/>
                            <com.edroplet.sanetel.view.custom.CustomRadioButton
                                android:id="@+id/top_angular_velocity_6"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/top_angular_velocity_5"/>
                            <com.edroplet.sanetel.view.custom.CustomEditText
                                android:id="@+id/top_angular_velocity_custom_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/top_angular_velocity_6"
                                android:layout_alignTop="@id/top_angular_velocity_6"
                                android:layout_alignBottom="@id/top_angular_velocity_6"
                                android:maxLength="10"
                                android:layout_gravity="bottom"
                                android:inputType="number|numberDecimal"
                                android:padding="@dimen/no_padding"
                                android:minWidth="@dimen/custom_edit_min_width"
                                android:theme="@style/CustomEditTextStyle"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/button_text"
                                android:hint="@string/custom_angle_hint"
                                android:background="@null"/>
                        </RelativeLayout>
                    </com.edroplet.sanetel.view.custom.CustomRadioGroupWithCustomRadioButton>
                </LinearLayout>
            </LinearLayout>
            <!--操作按键-->
            <LinearLayout
                style="@style/layout_manual_operate"
                android:layout_below="@+id/top_movement">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_direction_left"
                        android:drawableTop="@drawable/arrow_left"
                        style="@style/focus_button_horizontal_style"
                        android:focusableInTouchMode="true"
                        android:defaultFocusHighlightEnabled="true"
                        android:text="@string/manual_direction"/>
                    <!--android:background="@drawable/button_click_selector"-->
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_pitch_up"
                        android:drawableTop="@drawable/arrow_up"
                        style="@style/focus_button_horizontal_style"
                        android:text="@string/manual_pitch"/>
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_polarization_up"
                        android:drawableTop="@drawable/arrow_right_up"
                        style="@style/focus_button_horizontal_style"
                        android:text="@string/manual_polarization"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_direction_right"
                        android:drawableTop="@drawable/arrow_right"
                        style="@style/focus_button_horizontal_style"
                        android:text="@string/manual_direction"/>
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_pitch_down"
                        style="@style/focus_button_horizontal_style"
                        android:drawableTop="@drawable/arrow_down"
                        android:text="@string/manual_pitch" />
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_polarization_down"
                        android:drawableTop="@drawable/arrow_left_down"
                        style="@style/focus_button_horizontal_style"
                        android:text="@string/manual_polarization"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_reserve_up"
                        style="@style/focus_button_horizontal_style"
                        android:clickable="false"
                        android:focusable="false"/>
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_pause"
                        android:drawableTop="@drawable/park_circle"
                        style="@style/focus_button_horizontal_style"
                        android:text="@string/manual_pause"/>
                    <!--android:background="@drawable/button_background"-->
                    <com.edroplet.sanetel.view.custom.CustomButton
                        android:id="@+id/manual_reserve_down"
                        style="@style/focus_button_horizontal_style"
                        android:clickable="false"
                        android:focusable="false"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>