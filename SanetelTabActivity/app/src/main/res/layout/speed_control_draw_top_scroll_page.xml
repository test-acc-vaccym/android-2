<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--运动方式&角速度-->
    <LinearLayout
        android:id="@+id/top_movement"
        android:layout_marginTop="@dimen/main_margin_top"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <!--运动方式-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/main_application_manual_speed_movement"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/main_application_manual_speed_movement_step"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/main_application_manual_speed_movement_continuous" />
            </RadioGroup>
        </LinearLayout>
        <!--角速度-->
        <LinearLayout
            android:layout_marginTop="@dimen/main_margin_top"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="@string/main_application_manual_speed_palstance"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioGroupWithCustomRadioButton
                android:id="@+id/top_lactate_radio"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/layout_padding_left"
                android:layout_marginLeft="@dimen/layout_padding_left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0.1"/>
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0.5"/>
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1.0"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                        android:id="@+id/top_rd_three"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3.0"/>
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                        android:id="@+id/top_rd_five"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/top_rd_three"
                        android:layout_toRightOf="@id/top_rd_three"
                        android:text="5.0"/>
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioButton
                        android:id="@+id/top_custom_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/top_rd_five"
                        android:layout_toRightOf="@id/top_rd_five"/>
                    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                        android:id="@+id/top_custom_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/top_custom_setting"
                        android:layout_toEndOf="@id/top_custom_setting"
                        android:layout_toRightOf="@id/top_custom_setting"
                        android:hint="1.0"
                        android:inputType="number|numberDecimal"
                        android:padding="0dp"/>
                </RelativeLayout>
            </com.edroplet.qxx.saneteltabactivity.view.custom.CustomRadioGroupWithCustomRadioButton>

        </LinearLayout>
    </LinearLayout>
    <!--操作按键-->
    <LinearLayout
        android:layout_marginTop="@dimen/main_margin_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_movement">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:drawableTop="@drawable/arrow_left"
                style="@style/button_style"
                android:text="@string/manual_direction"/>
            <!--android:background="@drawable/button_click_selector"-->
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:drawableTop="@drawable/arrow_up"
                style="@style/button_style"
                android:text="@string/manual_pitch"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:drawableTop="@drawable/arrow_right_up"
                style="@style/button_style"
                android:text="@string/manual_polarization"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:drawableTop="@drawable/arrow_right"
                style="@style/button_style"
                android:text="@string/manual_direction"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                style="@style/button_style"
                android:drawableTop="@drawable/arrow_down"
                android:text="@string/manual_pitch" />
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:drawableTop="@drawable/arrow_left_down"
                style="@style/button_style"
                android:text="@string/manual_polarization"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                style="@style/button_style"
                android:clickable="false"
                android:focusable="false"/>
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                android:drawableTop="@drawable/park_circle"
                style="@style/button_style"
                android:text="@string/manual_pause"/>
            <!--android:background="@color/button_blink"-->
            <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                style="@style/button_style"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
