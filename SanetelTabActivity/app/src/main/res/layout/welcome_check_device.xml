<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke"
    android:layout_marginBottom="@dimen/app_bar_height">
    <com.edroplet.sanetel.view.custom.CustomTextView
        android:id="@+id/welcome_check_device_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:text="@string/welcome_check_device"
        android:textColor="@color/toolbar_text_color"
        android:background="@color/toolbar_background"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/welcome_check_device_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/appIntroBottomBarHeight"
        style="@style/linear_no_shadow_no_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/welcome_check_device"
                android:contentDescription="@string/welcome_check_device"/>
            <com.edroplet.sanetel.view.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="@dimen/layout_padding_top"
                android:text="@string/welcome_check_device_detail"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>