<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CoordinatorTabLayout">
        <attr name="contentScrim" format="color" />
        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="TagsLayout">
        <attr name="tagVerticalSpace" format="dimension" />
        <attr name="tagHorizontalSpace" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CustomTitleBar">
        <attr name="title_background_color" format="reference|integer" />
        <attr name="left_button_visible" format="boolean" />
        <attr name="right_button_visible" format="boolean" />
        <attr name="title_text" format="string" />
        <attr name="title_text_color" format="color" />
        <attr name="title_text_drawable" format="reference|integer" />
        <attr name="right_button_text" format="string" />
        <attr name="right_button_text_color" format="color" />
        <attr name="right_button_drawable" format="reference|integer" />
        <attr name="left_button_text" format="string" />
        <attr name="left_button_text_color" format="color" />
        <attr name="left_button_drawable" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="PercentView">
        <attr name="percent_circle_gravity"><!--圆形绘制的位置-->
            <flag name="left" value="0" />
            <flag name="top" value="1" />
            <flag name="center" value="2" />
            <flag name="right" value="3" />
            <flag name="bottom" value="4" />
        </attr>
        <attr name="percent_circle_radius" format="dimension" /><!--圆形半径-->
        <attr name="percent_circle_progress" format="integer" /><!--当前进度值-->
        <attr name="percent_progress_color" format="color" /><!--进度显示颜色-->
        <attr name="percent_background_color" format="color" /><!--圆形背景色-->
    </declare-styleable>

    <declare-styleable name="EdropletToolbar">
        <attr name="communication_state">
            <flag name="connected" value="0"/>
            <flag name="disconnected" value="1"/>
        </attr>
        <attr name="antenna_state">
            <flag name="init" value="0"/>
            <flag name="folded" value="1"/>
            <flag name="exploded" value="2"/>
            <flag name="reset" value="3"/>
            <flag name="searching" value="4"/>
            <flag name="locked" value="5"/>
            <flag name="abnormal" value="6"/>
        </attr>
        <attr name="bd_state">
            <flag name="enabled" value="0"/>
            <flag name="disabled" value="1"/>
        </attr>
        <attr name="locker_state">
            <flag name="locked" value="0"/>
            <flag name="released" value="1"/>
        </attr>
        <attr name="power_state" format="integer">
            <flag name="save" value="0"/>
            <flag name="charge" value="1"/>
        </attr>
        <attr name="leftButtonIcon" format="reference"/>
        <attr name="leftButtonText" format="reference|string"/>
        <attr name="leftButtonGravity" format="string"/>
        <attr name="rightButtonIcon" format="reference"/>
        <attr name="rightButtonText" format="reference|string"/>
        <attr name="rightButtonGravity">
            <enum name="left" value="1"/>
            <enum name="start" value="1"/>
            <enum name="top" value="2"/>
            <enum name="right" value="3"/>
            <enum name="end" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="isShowSearchView" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StatusButton">
        <attr name="state_color" format="enum">
            <enum name="normal" value="0"/>
            <enum name="special" value="1"/>
            <enum name="abnormal" value="2"/>
            <enum name="operate" value="3"/>
            <enum name="disable" value="4"/>
        </attr>
        <attr name="state_color_normal" format="boolean"/>
        <attr name="state_color_abnormal" format="boolean"/>
        <attr name="state_color_special" format="boolean"/>
        <attr name="state_color_operate" format="boolean"/>
        <attr name="state_color_disable" format="boolean"/>
        <attr name="button_height" format="reference|dimension"/>
        <attr name="button_width" format="dimension|reference"/>
        <attr name="drawable_height" format="reference|dimension"/>
        <attr name="drawable_width" format="dimension|reference"/>
        <attr name="drawable_space" format="dimension|reference"/>
    </declare-styleable>
</resources>