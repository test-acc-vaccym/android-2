<resources>

    <!-- Base application theme. -->
    <!--在Theme中隐藏现有的ActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--这是通过Style去设定icon-->
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textViewStyle" parent="AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- 为 Theme 设置背景图 -->
    <style name="AppStartTheme" parent="AppTheme">
        <!-- 为 Theme 设置透明属性 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--解决白屏的问题-->
        <!-- 为 Theme 设置背景图 -->
        <item name="android:windowBackground">@mipmap/welcome</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <!--item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item-->
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/help</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="guide_item_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">@dimen/guide_list_item_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">end|right</item>
        <item name="android:paddingLeft">@dimen/guide_list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginLeft">@dimen/guide_list_padding_left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="guide_item_flow_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:drawableRight">@drawable/process_ok</item>
        <item name="android:drawableEnd">@drawable/process_ok</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="guide_entry_list_style">
        <item name="android:layout_marginTop">@dimen/guide_entry_list_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/guide_main_item_background_color</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
    </style>

    <style name="linear_shadow">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/guide_main_item_background_color</item>
        <item name="android:divider">@drawable/spacer_medium</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingTop">@dimen/layout_padding_top</item>
        <item name="android:paddingBottom">@dimen/layout_padding_top</item>
    </style>
    <style name="linear_no_shadow_no_padding">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/item_background_color</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
    </style>

    <style name="settings_linear_shadow" parent="linear_shadow">
        <item name="android:paddingLeft">@dimen/layout_padding_left</item>
        <item name="android:paddingStart">@dimen/layout_padding_left</item>
    </style>

    <style name="manual_divider">
        <item name="android:divider">@drawable/spacer_medium</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="button_horizontal_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="focus_button_horizontal_style" parent="button_horizontal_style">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:defaultFocusHighlightEnabled">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="focus_button_vertical_style" parent="button_vertical_style">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:defaultFocusHighlightEnabled">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
    <style name="text_horizontal_style" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>
    </style>

    <style name="pop_text_horizontal_style" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>
    </style>

    <style name="text_vertical_style" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>
    </style>

    <style name="button_vertical_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">@dimen/guide_list_padding_left</item>
        <item name="android:layout_marginStart">@dimen/guide_list_padding_left</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="follow_me_navigation_bar" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/follow_me_navigation_height</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!--状态栏-->
    <style name="status_bar_button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/status_button_margin_left</item>
        <item name="android:layout_marginStart">@dimen/status_button_margin_left</item>
        <item name="android:textColor">@color/status_normal</item>
        <item name="android:background">@color/button_blink</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <!--快捷栏目-->
    <style name="operate_bar_button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/status_button_margin_left</item>
        <item name="android:layout_marginStart">@dimen/status_button_margin_left</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="pop_operate_bar_button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/no_padding</item>
        <item name="android:layout_marginStart">@dimen/no_padding</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <!--垂直布局-->
    <style name="layout_vertical_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/layout_padding_left</item>
        <!--<item name="android:layout_marginTop">@dimen/layout_padding_top</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!--水平布局-->
    <style name="layout_horizontal_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/layout_padding_left</item>
    </style>

    <style name="fileChooserName">
        <item name="android:drawablePadding">@dimen/guide_list_item_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingTop">@dimen/guide_list_item_padding</item>
        <item name="android:paddingBottom">@dimen/guide_list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="swipe_button_style">
        <item name="android:layout_width">@dimen/swipe_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/swipe_background_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--自定义单选框的style-->
    <style name="radio_group_custom_item_first_filed_horizontal_style">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/pink</item>
        <!--<item name="android:background">@null</item>-->
    </style>

    <style name="radio_group_custom_item_edit_horizontal_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.2</item>
        <!--<item name="android:background">@null</item>-->
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="android:paddingTop">@dimen/list_detail_padding</item>
        <item name="android:paddingBottom">@dimen/list_detail_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="radio_group_custom_item_third_filed_horizontal_style">
        <item name="android:layout_width">0dp</item>
        <!--<item name="android:background">@null</item>-->
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/list_detail_padding</item>
        <item name="android:paddingBottom">@dimen/list_detail_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="radio_group_second_item_edit_horizontal_style">
        <!--<item name="android:background">@null</item>-->
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingTop">@dimen/list_detail_padding</item>
        <item name="android:paddingBottom">@dimen/list_detail_padding</item>
    </style>

    <style name="weChat_radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:checked">true</item>-->
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bottom_tab_nav_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AppIntroButtonStyleCompat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppIntroDefaultHeading" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/appIntroHeadingTextSize</item>
    </style>
    <style name="AppIntroDefaultPadding">
        <item name="android:paddingTop">@dimen/appIntroDefaultPaddingTop</item>
        <item name="android:paddingLeft">@dimen/appIntroDefaultPaddingLeft</item>
        <item name="android:paddingRight">@dimen/appIntroDefaultPaddingRight</item>
        <item name="android:paddingBottom">@dimen/appIntroDefaultPaddingBottom</item>
    </style>
    <style name="AppIntroDefaultPadding.Intro1">
        <item name="android:paddingBottom">@dimen/appIntroDefaultPaddingBottomIntro1</item>
    </style>
    <style name="AppIntroDefaultPadding.Intro2">
        <item name="android:paddingBottom">@dimen/appIntroDefaultPaddingBottomIntro2</item>
    </style>
    <style name="AppIntroDefaultText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="entire_page">
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingStart">@dimen/globalPageMarginLeft</item>
        <item name="android:paddingEnd">@dimen/globalPageMarginRight</item>
    </style>
    <style name="layout_manual_value_select">
        <item name="android:layout_marginTop">@dimen/main_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout_manual_operate">
        <item name="android:layout_marginTop">@dimen/main_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout_three_parts_horizontal_layout">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/no_padding</item>
    </style>
    <style name="layout_three_parts_horizontal_first">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>
    <style name="layout_three_parts_horizontal_second">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>
    <style name="layout_three_parts_horizontal_third">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColor">@color/text_11</item>
    </style>
</resources>
