<resources>

    <!-- Base application theme. -->
    <!--在Theme中隐藏现有的ActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--这是通过Style去设定icon-->
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <!-- 为 Theme 设置背景图 -->
    <style name="AppStartTheme" parent="android:Theme">
        <!-- 为 Theme 设置透明属性 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 为 Theme 设置背景图 -->
        <item name="android:windowBackground">@mipmap/welcome</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <!--item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item-->
    </style>
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/help</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="guide_item_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">@dimen/guide_list_item_padding</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingLeft">@dimen/guide_list_item_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceSearchResultTitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginLeft">@dimen/guide_list_padding_left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="guide_item_flow_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:drawableRight">@drawable/process_ok</item>
        <item name="android:drawableEnd">@drawable/process_ok</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="guide_entry_list_style">
        <item name="android:layout_marginTop">@dimen/guide_entry_list_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
    </style>

    <style name="linear_shadow">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/guide_main_item_background_color</item>
        <item name="android:divider">@drawable/spacer_medium</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:showDividers">middle</item>
    </style>
    <style name="manual_divider">
        <item name="android:divider">@drawable/spacer_medium</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:showDividers">middle</item>
    </style>
    <style name="button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceSearchResultTitle</item>
    </style>

    <style name="follow_me_navigation_bar" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceSearchResultTitle</item>
    </style>

    <!--状态栏-->
    <style name="status_bar_button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/status_button_margin_left</item>
        <item name="android:layout_marginStart">@dimen/status_button_margin_left</item>
        <item name="android:textColor">@color/status_normal</item>
        <item name="android:background">@color/button_blink</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceSearchResultTitle</item>
    </style>
    <!--快捷栏目-->
    <style name="operate_bar_button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/status_button_margin_left</item>
        <item name="android:layout_marginStart">@dimen/status_button_margin_left</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAppearance">?attr/textAppearanceSearchResultTitle</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
