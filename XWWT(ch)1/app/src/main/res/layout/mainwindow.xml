<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar" >

        <ImageButton
            android:id="@+id/id_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/showhome_selector"
            android:contentDescription="@string/desc"
            android:onClick="showhomeMenu" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="星网卫通"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/showright_selector"
            android:contentDescription="@string/desc2"
            android:onClick="showRightMenu" />
    </RelativeLayout>

    <!-- 控件按相对位置进行排列 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView04"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="方位角:" />

        <EditText
            android:id="@+id/editText04"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="00dp"
            android:layout_toRightOf="@+id/textView04"
            android:ems="10" />

        <TextView
            android:id="@+id/textView05"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/editText04"
            android:gravity="center_horizontal"
            android:text="极化角:" />

        <EditText
            android:id="@+id/editText05"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="00dp"
            android:layout_toRightOf="@+id/textView05"
            android:ems="10" />

        <TextView
            android:id="@+id/textView06"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView04"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="俯仰角:" />

        <EditText
            android:id="@+id/editText06"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText04"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView06"
            android:ems="10" />

        <TextView
            android:id="@+id/textView07"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView05"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/editText06"
            android:gravity="center_horizontal"
            android:text="经度:" />

        <EditText
            android:id="@+id/editText07"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText05"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView07"
            android:ems="10" />

        <TextView
            android:id="@+id/textView08"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView06"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="俯仰角:" />

        <EditText
            android:id="@+id/editText08"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText06"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView06"
            android:ems="10" />

        <TextView
            android:id="@+id/textView09"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView07"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/editText06"
            android:gravity="center_horizontal"
            android:text="经度:" />

        <EditText
            android:id="@+id/editText09"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText07"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView07"
            android:ems="10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:orientation="vertical"
        android:background="@drawable/border" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/backgroundcolor"
            android:text="读取城市信息"
            android:textColor="@color/dodgerblue" />

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/textView11"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="城市"
            android:layout_weight="1"
            
            ></TextView>
        
        <TextView
            android:id="@+id/textView12"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/textView11"
            android:text="经度"
            android:layout_weight="1"
            
            ></TextView>
        
          <TextView
            android:id="@+id/textView13"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/textView12"
            android:text="纬度"
            android:layout_weight="1"
            ></TextView>
</RelativeLayout>
       
<Button
            android:id="@+id/Button03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right|bottom"
            android:onClick="ReadCityInfo"
            android:text="读取" />
        
    </LinearLayout>
        
    
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:layout_marginRight="17dp"
        android:onClick="GetSerialValue"
        android:text="获取串口数据" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="GetSerialValue"
        android:text="获取串口数据" />

</RelativeLayout>