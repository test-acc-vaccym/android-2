<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.itcast.mobilesafe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INSTALL_PACKAGES"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <!-- 粗略定位授权 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 精细定位授权 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- 模拟定位授权 -->
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:name="MobileSafeApplication">
        <uses-library android:name="android.test.runner"/>
        <activity
            android:label="@string/app_name"
            android:name=".activity.SplashActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.SettingCenterActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        
        <activity android:name=".activity.LostProtectedActivity"
            android:theme="@android:style/Theme.Translucent"
            ></activity>
        <activity android:name=".activity.Setup1ConfigActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.Setup2ConfigActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.Setup3ConfigActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.ContactListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.Setup4ConfigActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.LostProtectedSettingActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.AtoolsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.AddIpCallActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.AddressQueryActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name=".activity.DragViewActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
        <activity android:name=".activity.BlackNumberListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:launchMode="singleTop"></activity>
        <activity android:name=".activity.AppManagerActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            ></activity>
        <activity android:name=".activity.AppLockManagerActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            ></activity>
        <activity android:name=".activity.EnterPasswordActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:launchMode="singleInstance"
            ></activity>
        <activity android:name=".activity.TaskManagerActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            ></activity>
        <activity android:name=".activity.TaskManagerSettingActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            ></activity>
        <activity android:name=".activity.TrafficManagerActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            ></activity>
        <activity android:name=".activity.CommonNumberActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            ></activity>
        
        <receiver android:name=".receiver.PhoneReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>
        
        <receiver android:name=".receiver.SmsRecevier">
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.MyAdmin">
			<meta-data android:name="android.app.device_admin"
				android:resource="@xml/my_admin" />
			<intent-filter>
				<action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
			</intent-filter>
		</receiver>
		<receiver android:name=".receiver.BootCompleteReceiver">
		    <intent-filter android:priority="1000">
		        <action android:name="android.intent.action.BOOT_COMPLETED"/>
		    </intent-filter>
		</receiver>
		<receiver android:name=".receiver.ProcessReceiver" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/example_appwidget_info" />
		</receiver>
		<receiver android:name=".receiver.KillProcessReceiver">
		    <intent-filter>
		        <action android:name="cn.itcast.action.killprocess"/>
		    </intent-filter>
		</receiver>
		
		<service android:name=".service.ShowAddressService"></service>
		<service android:name=".service.BlackNumberService"></service>
		<service android:name=".service.BackupSmsService"></service>
		<service android:name=".service.AppLockService"></service>
		<service android:name=".service.AutoClearService"></service>
		<service android:name=".service.ProcessWidgetService"></service>
		
		<provider android:name=".provider.AppLockProvider"
		    android:authorities="applock"></provider>
		
    </application>

    <instrumentation android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="cn.itcast.mobilesafe"></instrumentation>
</manifest>