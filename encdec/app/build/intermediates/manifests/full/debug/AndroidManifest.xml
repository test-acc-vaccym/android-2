<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.edroplet.encdec"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <uses-permission-sdk-23 android:name="android.permission.BATTERY_STATS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="top.edroplet.encdec.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="top.edroplet.encdec.ExDialog"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="top.edroplet.encdec.MulSelect"
            android:theme="@android:style/Animation.Dialog" />
        <activity
            android:name="top.edroplet.encdec.EncodingTransferActivity"
            android:label="@string/title_activity_encoding_transfer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name="top.edroplet.encdec.FindReplaceActivity"
            android:label="@string/title_activity_find_replace" />
        <activity
            android:name="top.edroplet.encdec.AnimatorActivity"
            android:label="@string/title_activity_animator" />
        <activity android:name="top.edroplet.encdec.SensorStudy" />
    </application>

</manifest>