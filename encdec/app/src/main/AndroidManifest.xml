<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.edroplet.encdec"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 获取状态 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 写外置sd卡 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" /> <!-- 写设置 -->
    <uses-permission android:name="android.permission.SEND_SMS" /> <!-- 发送短信 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" /> <!-- 接收短信 -->
    <uses-permission android:name="android.permission.READ_SMS" /> <!-- 读取短信 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 位置 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 联网和网络定位 -->
    <uses-permission-sdk-23 android:name="android.permission.BATTERY_STATS" /> <!-- 电池状态 -->
    <uses-permission android:name="android.permission.SENSOR_INFO" /> <!-- 传感器信息 -->
    <uses-permission android:name="android.permission.SENSOR_ENABLE" /> <!-- 传感器使能 -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 震动 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <permission android:protectionLevel="normal" android:name="oem.permission.SENDMAIL"/>

    <!-- 精确位置 -->
    <!-- http://blog.csdn.net/self_study/article/details/54020909 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backupscheme"
        android:hardwareAccelerated="true"
        android:allowTaskReparenting="true"
        android:enabled="true"
        android:excludeFromRecents="true"
        android:exported="true"
        android:noHistory="false"
        android:multiprocess="false"
        android:maxRecents="25"
        android:launchMode="singleTask">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="recipe-app.com"
                    android:pathPrefix="/recipes" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.io.ExDialogActivity"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.io.EncodingTransferActivity"
            android:label="@string/title_activity_encoding_transfer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.io.FindReplaceActivity"
            android:label="@string/title_activity_find_replace" />
        <activity
            android:name=".activities.animation.AnimatorActivity"
            android:label="@string/title_activity_animator" />
        <activity android:name=".activities.sensors.SensorActivity" />
        <activity android:name=".activities.system.SmsActivity" />
        <activity android:name=".activities.sensors.StepCounterActivity" />
        <activity android:name=".activities.sensors.CompassActivity" />

        <service
            android:name=".service.WalkingService"
            android:enabled="true"
            android:exported="false"
            android:icon="@mipmap/ic_launcher"
            android:isolatedProcess="false"
            android:label="@string/service"
            android:permission="oem.permission.SENDMAIL">

            <!--
			android:permission="onStart"
			android:process="string"
            -->

        </service>
        <!--
        receiver android:name=".service.WalkingService">
			<intent-filter>
				<action android:name="top.edroplet.encdec.service.WalkingService"/>
			</intent-filter>
		</receiver
        -->
        <activity android:name=".activities.system.GpsActivity" />
        <activity android:name=".activities.sensors.SensorSimulatorDemoActivity" />
        <receiver android:name=".service.ProximityReceiver" />
        <activity
            android:name=".activities.system.KeyboardActivity"
            android:label="@string/title_activity_keyboard"/>
    </application>

</manifest>