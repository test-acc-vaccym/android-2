<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        android:id="@+id/city_list_name"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/list_item_text_size"
        android:textAppearance="?attr/textAppearanceListItem" />
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        android:id="@+id/city_list_latitude"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/list_item_text_size"
        android:textAppearance="?attr/textAppearanceListItem" />
    <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
        android:id="@+id/city_list_longitude"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/list_item_text_size"
        android:textAppearance="?attr/textAppearanceListItem" />
    <com.edroplet.qxx.saneteltabactivity.view.custom.SmoothCheckBox
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/city_select_checkbox"/>
</LinearLayout>