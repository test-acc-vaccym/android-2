<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.edroplet.qxx.saneteltabactivity.activities.main.MainActivity"
    android:divider="@drawable/divider">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/main_me_advice_toolbar"
            android:layout_width="match_parent"
            app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/state_bar_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/back"
            app:titleTextColor="@color/title_text"
            android:title="@string/main_bottom_nav_me">
        </android.support.v7.widget.Toolbar>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_divider"
            android:background="@color/gray"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/welcome_install_wire_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/guide_list_padding_left"
            android:layout_marginLeft="@dimen/guide_list_padding_left">
            <!--接收邮箱：support@sanetel.com-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:text="@string/main_me_error_report_email_receive"
                    style="@style/text_horizontal_style"
                    android:layout_weight="0.5"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:padding="@dimen/appbar_padding_top"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                    android:text="@string/main_me_error_report_email_receive_address"
                    style="@style/text_horizontal_style"
                    android:focusable="false"
                    app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
            <!--发送邮箱-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:text="@string/main_me_error_report_email_send"
                    style="@style/text_horizontal_style"
                    android:layout_weight="0.5"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:padding="@dimen/appbar_padding_top"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_email_send_address"
                    android:hint="@string/main_me_advice_email_receive_address"
                    style="@style/text_horizontal_style"
                    app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
            <!--姓    名-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:text="@string/main_me_advice_name"
                    style="@style/text_horizontal_style"
                    android:layout_weight="0.5"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:padding="@dimen/appbar_padding_top"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_name"
                    style="@style/text_horizontal_style"
                    app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
            <!--电    话-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:text="@string/main_me_advice_phone"
                    style="@style/text_horizontal_style"
                    android:layout_weight="0.5"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:padding="@dimen/appbar_padding_top"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_phone"
                    style="@style/text_horizontal_style"
                    app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
            <!--产品序列号-->
            <!--LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:text="@string/main_me_advice_serial_number"
                    style="@style/text_horizontal_style"
                    android:layout_weight="0.6"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:padding="@dimen/appbar_padding_top"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_serial_number"
                    style="@style/text_horizontal_style"
                    app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout-->
            <!--文件名称-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:text="@string/main_me_advice_filename"
                    style="@style/text_horizontal_style"
                    android:layout_weight="0.5"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:padding="@dimen/appbar_padding_top"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_filename"
                    style="@style/text_horizontal_style"
                    app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
            <!--添加照片-->
            <LinearLayout
                style="@style/layout_vertical_style">

                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                    android:id="@+id/main_me_advice_photo"
                    android:text="@string/main_me_advice_photo"
                    style="@style/button_horizontal_style"
                    android:gravity="start|left"/>
            </LinearLayout>
            <!--故障描述-->
            <LinearLayout
                style="@style/layout_vertical_style"
                android:orientation="vertical"
                android:layout_weight="3">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomTextView
                    android:text="@string/main_me_advice_description"
                    style="@style/text_vertical_style"
                    android:layout_weight="0.3"
                    android:gravity="start|left"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomEditText
                    android:id="@+id/main_me_advice_description"
                    style="@style/text_vertical_style"
                    app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
            <!--底部栏-->
            <LinearLayout
                style="@style/layout_vertical_style">
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                    android:id="@+id/main_me_advice_commit"
                    style="@style/button_horizontal_style"
                    android:text="@string/main_me_advice_commit"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                    android:id="@+id/main_me_advice_save"
                    style="@style/button_horizontal_style"
                    android:text="@string/main_me_advice_save"/>
                <com.edroplet.qxx.saneteltabactivity.view.custom.CustomButton
                    android:id="@+id/main_me_advice_return"
                    style="@style/button_horizontal_style"
                    android:text="@string/main_me_advice_return"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
